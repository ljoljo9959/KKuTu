extends layout

block Subject
	title *** JJO.KR 관리 페이지 ***

block JS
	script(type="text/javascript", src="/js/in_admin.min.js")
	
block Middle
	fieldset
		legend 자격
		input#db-password(type='password', placeholder='암호')
		input#db-lang(placeholder='테이블')
	fieldset
		legend 유저 DB 다루기
		div
			input#user-id(placeholder='ID')
			input#user-nick(placeholder='닉네임')
			button#user-go 조회
			div
				table
					thead: tr
						td #
						td money
						td kkutu
						td box
						td equip
						td nickname 
						td nickChanged
						td exordial
						td server
						td lastLogin
						td black
						td blockedUntil
						td friends
					tbody#user-data
			button#user-apply 적용
	fieldset
		legend 유저 감시하기
		div
			input#gamsi-id(placeholder='ID (,로 구분)')
			button#gamsi-go 감시
			div
				table
					thead: tr
						td #
						td 닉네임
						td 서버
					tbody#gamsi-data
	fieldset
		legend IP 조회
		div
			textarea#iplist(rows=20, cols=100, placeholder="IP 정보", readonly)
			button#iplistok 조회 
	fieldset 
		legend 채팅 조회
		div
			input#id-chat(placeholder="유저 아이디 [guest({ip})]")
			textarea#list-chat(cols=50, rows=30, placeholder="채팅 정보", readonly)
			button#ok-chat 조회 