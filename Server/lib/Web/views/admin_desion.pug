block Subject
	title *** JJO.KR 관리 페이지 ***

block JS
	script(type="text/javascript", src="/js/in_admin.min.js")
	
block Middle
	fieldset
		legend 자격
		input#db-password(type='password', placeholder='암호')
		input#db-lang(placeholder='테이블')
	fieldset
		legend 상점 DB 다루기
		div
			input#shop-word(placeholder='품목 (~ALL)')
			button#shop-go 조회
			button#shop-hide 숨기기
			div
				table
					thead: tr
						td #
						td cost
						td hit
						td term
						td group
						td updatedAt
						td options
						td name_ko_KR
						td desc_ko_KR
						td name_en_US
						td desc_en_US
					tbody#shop-data
			button#shop-add 추가
			button#shop-apply 적용
